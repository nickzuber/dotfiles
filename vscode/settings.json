  "editor.tokenColorCustomizations": {
    "[Focus Dark]": {
      "comments": "#575d64",
      "keywords": "#575d64",
      "numbers": "#ffd580",
      "functions": "#4eeea3",
      "textMateRules": [
        // @TESTING
        {
          "scope": ["entity.name.tag.js"],
          "settings": {
            "foreground": "#f00"
          }
        },
        {
          "name": "Important genearl tokens that matter",
          "scope": [
            "support.constant",
            "support.class",
            "variable",
            "source.ocaml",
            "meta.paren-group.ocaml",
            "support.other.module.ocaml",
            "meta.module.structure.ocaml",
            "meta.record.ocaml",
            "entity.name.tag.js"
          ],
          "settings": {
            "foreground": "#E0E0E0"
          }
        },
        {
          "name": "Special tokens that matter",
          "scope": [
            "storage.type.class.jsdoc",
            "punctuation.definition.block.tag.jsdoc",
            "meta.module-reference.ocaml",
            "constant.language.variant.ocaml"
          ],
          "settings": {
            "foreground": "#4eeea3"
          }
        },
        {
          "name": "Tokens that we want to know about but not emphisize",
          "scope": [
            "entity.other.attribute-name",
            "string.quoted.single",
            "string.quoted.double",
            "string.template",
            "punctuation.definition.string",
            "support.variable.property",
            "constant.character.string.escape.ocaml"
          ],
          "settings": {
            "foreground": "#9aa8b3"
          }
        },
        {
          "name": "Value tokens",
          "scope": [
            "constant.language.boolean",
            "constant.language.infinity",
            "keyword.other.storage.modifier.ocaml"
          ],
          "settings": {
            "foreground": "#ffd580"
          }
        },
        {
          "name": "Grayed-out tokens",
          "scope": [
            "keyword.other.ocaml",
            "keyword.operator.arithmetic",
            "keyword.control.flow",
            "meta.object-literal",
            "entity.name.type",
            "constant.language.undefined",
            "constant.language.null",
            "meta.function",
            "keyword.operator",
            "punctuation.definition.string",
            "punctuation.definition",
            "meta.brace.square",
            "meta.brace.round",
            "meta.brace.square",
            "punctuation.terminator.statement",
            "meta.brace.round"
          ],
          "settings": {
            "foreground": "#575d64"
          }
        },
        {
          "name": "Types",
          "scope": ["storage.type.ocaml", "support.type"],
          "settings": {
            "foreground": "#717981"
          }
        }
      ]
    },
    "[Kary Pro Colors － Light]": {
      "variables": "#11110f",
      "functions": "#11110f",
      "comments": "#afafaf",
      "keywords": "#42575c",
      "numbers": "#a01c74",
      "strings": "#306d4f",
      "textMateRules": [
        {
          "scope": [
            "meta.definition.function",
            "keyword.other.funtion-definition",
            "keyword.other.function-definition",
            // "constant.language.variant"
            "entity.name.type.module"
          ],
          "settings": {
            "foreground": "#11110f",
            "fontStyle": "bold"
          }
        },
        {
          "scope": [
            "meta.function-call",
            "variable.other.object",
            "variable.other.constant",
            "variable.parameter",
            "support.class.component",
            "keyword.other",
            "entity.name.tag"
          ],
          "settings": {
            "foreground": "#11110f",
            "fontStyle": ""
          }
        },
        {
          "scope": [
            "keyword.control.default",
            "storage.type.function",
            "meta.module.openbinding",
            "punctuation.definition.tag.begin",
            "punctuation.definition.tag.end",
            "meta.object-literal.key"
          ],
          "settings": {
            "foreground": "#42575c",
            "fontStyle": ""
          }
        },
        {
          "scope": ["meta.var.expr keyword.control.export", "keyword.control.export"],
          "settings": {
            "foreground": "#89715c",
            "fontStyle": ""
          }
        },
        {
          "scope": [
            "keyword.operator.assignment",
            "punctuation.definition.parameters",
            "punctuation.definition.block",
            "punctuation.definition.template-expression.begin",
            "punctuation.definition.template-expression.end",
            "punctuation.definition.string.template.begin",
            "punctuation.definition.string.template.end"
          ],
          "settings": {
            "foreground": "#908f97",
            "fontStyle": ""
          }
        },
        {
          "scope": ["keyword.control", "constant.language.variant", "keyword.operator.infix"],
          "settings": {
            "foreground": "#534fa3",
            "fontStyle": ""
          }
        },
        {
          "scope": ["constant.character.string.escape"],
          "settings": {
            "foreground": "#a01c74",
            "fontStyle": ""
          }
        },
        {
          "scope": [
            "punctuation.definition.string.begin",
            "punctuation.definition.string.end"
          ],
          "settings": {
            "foreground": "#306d4f",
            "fontStyle": ""
          }
        }
      ]
    }
  },
  "typescript.check.npmIsInstalled": false,
  "files.associations": {
    "*.ml": "ocaml",
    "*.mli": "ocaml",
    "*.mll": "ocaml"
